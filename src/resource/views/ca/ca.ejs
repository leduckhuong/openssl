<div class="container">
    <form action="/ca" method="post">
        <div class="form-group">
            <label for="domain">Domain</label>
            <input type="text" name="domain" class="form-control" id="domain" placeholder="Enter the website Domain name">
        </div>
        <div class="form-group">
            <label for="organization">Organization</label>
            <input type="text" name="organization" class="form-control" id="organization" placeholder="Enter the Organization name">
        </div>
        <div class="form-group">
            <label for="owner">Owner</label>
            <input type="text" name="owner" class="form-control" id="owner" placeholder="Enter the Owner name">
        </div>
        <button type="submit" class="btn btn-primary">GET CA/KEY</button>
    </form>
</div>